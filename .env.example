# Copy this to .env and fill in the secrets

# Supabase Postgres connection string (required)
DATABASE_URL=postgresql://postgres:YOUR-PASSWORD@db.noupavjvuhezvzpqcbqg.supabase.co:5432/postgres?sslmode=require

# Backend debug flag
DEBUG=False

# Email provider config (example: Resend)
EMAIL_PROVIDER=resend
RESEND_API_KEY=
SMTP_FROM=Joborra <no-reply@emails.joborra.com>
FRONTEND_ORIGIN=https://joborra.com

# Supabase Storage (for resumes, logos, etc.)
# NOTE: SERVICE ROLE key must only be used on the server (backend), never in the frontend.
SUPABASE_URL=https://YOUR-PROJECT-ref.supabase.co
SUPABASE_SERVICE_ROLE=YOUR_SERVICE_ROLE_JWT
# Bucket will be created if missing; set public bucket for direct link rendering
SUPABASE_STORAGE_BUCKET=resumes
# Set to true to make bucket private (recommended for sensitive docs). When true,
# the backend stores storage paths (storage://bucket/object) and returns signed URLs in API responses.
SUPABASE_STORAGE_PRIVATE=false
# Signed URL TTL in seconds (default 7 days)
SUPABASE_SIGNED_URL_TTL=604800

# Google OAuth (backend)
# Create a Google Cloud OAuth 2.0 Web application and paste credentials here
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Optional override; defaults to <api_base>/api/auth/google/callback
GOOGLE_REDIRECT_URI=
